<configuration debug="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.atmosphere.vibe" level="TRACE" />
    <logger name="org.atmosphere.vibe.transport" level="INFO" />
    <logger name="org.atmosphere.vibe.platform" level="INFO" />
    <logger name="org.atmosphere.cpr" level="INFO" />
    <logger name="org.eclipse.jetty" level="INFO"/>
    <root>
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>